<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans.xsd
         http://www.springframework.org/schema/context
         http://www.springframework.org/schema/context/spring-context.xsd">


    <context:component-scan base-package="com.fly.house"/>

    <bean id="taskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="corePoolSize" value="5"/>
        <property name="maxPoolSize" value="10"/>
        <property name="queueCapacity" value="25"/>
    </bean>

    <bean id="restTemplate" class="org.springframework.web.client.RestTemplate"/>

    <bean id="restServer" class="org.springframework.test.web.client.MockRestServiceServer"/>

    <bean id="pathsListFile" class="java.nio.file.Paths" factory-method="get">
        <constructor-arg index="0" value="search-client/src/test/resources/share/paths.pth" type="java.lang.String"/>
        <constructor-arg index="1">
            <list>
                <value></value>
            </list>
        </constructor-arg>
    </bean>

    <bean id="snapshotFolder" class="java.nio.file.Paths" factory-method="get">
        <constructor-arg index="0" value="./snapshots" type="java.lang.String"/>
        <constructor-arg index="1">
            <list>
                <value></value>
            </list>
        </constructor-arg>
    </bean>

</beans>